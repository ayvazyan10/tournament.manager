{% extends 'layout/base.html.twig' %}

{% block title %}Создать команду{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="mb-4">Создать новую команду</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <button type="submit" class="btn btn-success mt-3">Создать команду</button>
                {{ form_end(form) }}
            </div>
        </div>

        <a href="{{ path('team_index') }}" class="btn btn-secondary mt-3">Назад к списку команд</a>
    </div>
{% endblock %}
